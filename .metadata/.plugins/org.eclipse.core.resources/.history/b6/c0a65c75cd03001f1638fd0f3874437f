package strings;

public class StringBufferDemo {

	public static void main(String[] args) {
		String str1 = "welcome";
		
		// CRUD operations
		// C - Create, R - Read, U - Update, D - Delete
		
		// C - Create
		StringBuffer strBuff = new StringBuffer(str1);
		strBuff.append(" to");
		strBuff.append(" JAVA!");
		System.out.println(strBuff);
	}

}
